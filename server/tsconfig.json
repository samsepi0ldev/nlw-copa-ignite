{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [
        "../tests/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "rootDirs": [
      "src",
      "tests"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma", "vitest.config.ts", "tests"],
  "exclude": []
}
